@model IEnumerable<MVC_FirstProject.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Index</h2>

    <table class="table">
        <tr>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th></th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.MembershipType.Name</td>
                <td>@Html.ActionLink("Details", "Detail", new { id = c.ID })</td>
            </tr>
        }

    </table>
</div>


